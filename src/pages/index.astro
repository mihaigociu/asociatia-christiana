---
import Layout from '~/layouts/PageLayout.astro';
import { Image } from 'astro:assets';

import Hero from '~/components/widgets/Hero.astro';
import Features from '~/components/widgets/Features.astro';
import Content from '~/components/widgets/Content.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Stats from '~/components/widgets/Stats.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';

import logoSfVasile from '~/assets/images/logos/logo-sf-vasile.jpg';
import logoSfPantelimon from '~/assets/images/logos/logo-sf-pantelimon.jpg';
import logoAmd from '~/assets/images/logos/logo-amd.jpg';
import logoSfNicolae from '~/assets/images/logos/logo-sf-nicolae.jpg';
import logoGradinita from '~/assets/images/logos/logo-gradinita.jpg';
import logoSfBasarabov from '~/assets/images/logos/logo-sf-basarabov.jpg';

const centres = [
  {
    title: 'CSS "Sf. Vasile cel Mare"',
    description: 'Centrul de Servicii Sociale care adăpostește Școala Christiana și programele educaționale.',
    image: logoSfVasile,
    href: '/centre/css-sf-vasile',
  },
  {
    title: 'CAMS "Sf. Pantelimon"',
    description: 'Centrul de Asistență Medico-Socială oferind consultații medicale și medicamente gratuite.',
    image: logoSfPantelimon,
    href: '/centre/poli-sf-pantelimon',
  },
  {
    title: 'CSS "Acoperământul Maicii Domnului"',
    description: 'Centru de zi pentru copii cu vârsta cuprinsă între 0-2 ani, aflați în risc de abandon.',
    image: logoAmd,
    href: '/centre/css-amd',
  },
  {
    title: 'CIA "Sf. Nicolae", Mociu',
    description: 'Centrul de Îngrijire și Asistență destinat persoanelor vârstnice sărace și singure.',
    image: logoSfNicolae,
    href: '/centre/cia-mociu',
  },
  {
    title: 'Grădinița Socială, Turda',
    description: 'Grădinița Socială "Acoperământul Maicii Domnului" pentru copii din familii defavorizate.',
    image: logoGradinita,
    href: '/centre/gradi-turda',
  },
  {
    title: 'Programul "Sf. Dimitrie Basarabov"',
    description: 'Program de informare și consiliere în adicții - ambulatoriu și centru de zi.',
    image: logoSfBasarabov,
    href: '/centre/progr-sf-dimitrie',
  },
];

const metadata = {
  title: 'Asociația Filantropică Medical-Creștină Christiana - Filiala Cluj',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <!-- Hero Section - matches the original carousel/banner area -->
  <Hero
    actions={[
      {
        variant: 'primary',
        text: 'Descoperă proiectele',
        href: '#proiecte',
        icon: 'tabler:arrow-right',
      },
      {
        text: 'Donează',
        href: '/sustine-ne',
        icon: 'tabler:heart',
      },
    ]}
  >
    <Fragment slot="title">
      <span class="text-accent">Construim</span> comunitatea
    </Fragment>

    <Fragment slot="subtitle">
      <span class="text-lg text-[#eaf6ff]/90">
        Asociația Filantropică Medical-Creștină CHRISTIANA - Filiala Cluj oferă asistență medicală, socială și
        educațională persoanelor defavorizate din 1991.
      </span>
    </Fragment>

    <Fragment slot="bg">
      <div class="absolute inset-0 bg-gradient-to-b from-[#003459] to-[#1d79b6]"></div>
    </Fragment>
  </Hero>

  <!-- Donation Strip - matches the original donation banner -->
  <section class="bg-[#ed9f23] py-8">
    <div class="max-w-6xl mx-auto px-4 flex flex-col md:flex-row items-center justify-between gap-4">
      <div class="text-white text-center md:text-left">
        <h2 class="text-2xl font-bold">Susține-ne în misiunea noastră</h2>
        <p class="text-white/90">
          Prin donația ta, contribui la o viață mai bună pentru persoanele defavorizate din comunitatea noastră.
        </p>
      </div>
      <a
        href="/sustine-ne"
        class="inline-flex items-center gap-2 bg-white text-[#ed9f23] font-bold px-8 py-3 rounded hover:bg-[#eaf6ff] transition-colors whitespace-nowrap"
      >
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="currentColor"
          ><path
            d="M12 21.35l-1.45-1.32C5.4 15.36 2 12.28 2 8.5 2 5.42 4.42 3 7.5 3c1.74 0 3.41.81 4.5 2.09C13.09 3.81 14.76 3 16.5 3 19.58 3 22 5.42 22 8.5c0 3.78-3.4 6.86-8.55 11.54L12 21.35z"
          ></path></svg
        >
        Donează acum
      </a>
    </div>
  </section>

  <!-- Stats - Organization numbers -->
  <Stats
    title="Christiana în cifre"
    subtitle="Peste 30 de ani de activitate în slujba comunității"
    stats={[
      { title: 'Ani de activitate', amount: '30+' },
      { title: 'Centre', amount: '6' },
      { title: 'Proiecte', amount: '8' },
      { title: 'Fondată', amount: '1991' },
    ]}
  />

  <!-- Centers Section - with center logos from old site -->
  <section id="centre" class="py-16 md:py-20">
    <div class="max-w-6xl mx-auto px-4 sm:px-6">
      <div class="text-center mb-10 md:mb-12">
        <p class="text-sm font-bold uppercase tracking-wide text-[#1d79b6] mb-2">Centre</p>
        <h2 class="text-3xl md:text-4xl font-bold text-[#003459]">Centrele noastre</h2>
        <p class="mt-4 text-lg text-gray-600 max-w-3xl mx-auto">
          Asociația Christiana operează mai multe centre de asistență socială, medicală și educațională în județul Cluj.
        </p>
      </div>
      <div class="grid sm:grid-cols-2 lg:grid-cols-3 gap-6">
        {
          centres.map((centre) => (
            <a
              href={centre.href}
              class="group relative flex flex-col rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-all duration-300 bg-white border border-gray-100"
            >
              <div class="flex items-center justify-center bg-[#eaf6ff] p-6 min-h-[120px]">
                <Image
                  src={centre.image}
                  alt={centre.title}
                  class="max-w-[200px] max-h-[80px] w-auto h-auto object-contain group-hover:scale-105 transition-transform duration-300"
                  widths={[250]}
                />
              </div>
              <div class="p-5 flex-1 flex flex-col">
                <h3 class="text-lg font-bold text-[#003459] group-hover:text-[#1d79b6] transition-colors">
                  {centre.title}
                </h3>
                <p class="mt-2 text-sm text-gray-600 flex-1">{centre.description}</p>
                <span class="inline-flex items-center mt-3 text-sm font-semibold text-[#1d79b6] group-hover:text-[#003459]">
                  Află mai multe
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    class="w-4 h-4 ml-1 group-hover:translate-x-1 transition-transform"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                  >
                    <path d="M5 12h14M12 5l7 7-7 7" />
                  </svg>
                </span>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>

  <!-- Projects Section -->
  <Features
    id="proiecte"
    tagline="Proiecte"
    title="Proiectele noastre"
    subtitle="Programe sociale și educaționale care transformă vieți."
    columns={3}
    items={[
      {
        title: 'Școala Gimnazială "Christiana"',
        description: 'Program "A doua șansă" pentru persoanele care nu au finalizat studiile gimnaziale.',
        icon: 'tabler:book',
        callToAction: { text: 'Află mai multe', href: '/proiecte/scoala-gimnaziala-christiana' },
      },
      {
        title: '"Învață să reușești"',
        description: 'Meditații gratuite și sprijin pentru elevii cu situație școlară problematică.',
        icon: 'tabler:award',
        callToAction: { text: 'Află mai multe', href: '/proiecte/invata-sa-reusesti' },
      },
      {
        title: 'Burse Școlare',
        description: 'Acordarea de burse pentru elevii din familii defavorizate.',
        icon: 'tabler:certificate',
        callToAction: { text: 'Află mai multe', href: '/proiecte/burse-scolare' },
      },
      {
        title: 'Meditații Școlare',
        description: 'Program de meditații gratuite pentru copiii din familii cu venituri mici.',
        icon: 'tabler:pencil',
        callToAction: { text: 'Află mai multe', href: '/proiecte/meditatii-scolare' },
      },
      {
        title: 'Centrul Comunitar pentru Tineret',
        description: 'Activități de petrecere a timpului liber menite să formeze și să dezvolte abilități sociale.',
        icon: 'tabler:users-group',
        callToAction: { text: 'Află mai multe', href: '/proiecte/centrul-comunitar-pentru-tineret' },
      },
      {
        title: 'Cantina Socială "Sf. Arhidiacon Ștefan"',
        description: 'Masă caldă zilnică pentru persoanele defavorizate socio-economic.',
        icon: 'tabler:soup',
        callToAction: { text: 'Află mai multe', href: '/proiecte/cantina-sociala' },
      },
      {
        title: 'Pentru Viață',
        description: 'Informare și consiliere pre și post-avort pentru femeile aflate în situații de criză.',
        icon: 'tabler:heart-plus',
        callToAction: { text: 'Află mai multe', href: '/proiecte/pentru-viata' },
      },
      {
        title: 'Părinți și adolescenți',
        description: 'Activități educative de dezvoltare și remediere pentru părinți și adolescenți.',
        icon: 'tabler:friends',
        callToAction: { text: 'Află mai multe', href: '/proiecte/parinti-si-adolescenti' },
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#eaf6ff] dark:bg-transparent"></div>
    </Fragment>
  </Features>

  <!-- About Section -->
  <Content
    tagline="Despre noi"
    title="Asociația Christiana Cluj"
    items={[
      {
        title: 'Fondată în 1991',
        description: 'Una dintre primele asociații înființate de Biserica Ortodoxă Română.',
      },
      {
        title: 'Asistență medicală și socială',
        description: 'Oferim servicii medicale, sociale și spirituale persoanelor excluse din sistemul public.',
      },
      {
        title: 'Educație și formare',
        description: 'Programe educaționale pentru copii și tineri din familii defavorizate.',
      },
      {
        title: 'Comunitate și solidaritate',
        description: 'Construim comunitatea prin slujire, voluntariat și solidaritate creștină.',
      },
    ]}
    callToAction={{
      text: 'Află mai multe despre noi',
      href: '/despre-noi',
      icon: 'tabler:arrow-right',
    }}
  >
    <Fragment slot="content">
      <h3 class="text-2xl font-bold tracking-tight sm:text-3xl mb-2">Construim comunitatea</h3>
      Asociația CHRISTIANA activează în domeniul asistenței medicale, sociale și educaționale, oferind sprijin persoanelor
      defavorizate din comunitatea clujeană.
    </Fragment>
  </Content>

  <!-- Blog / News Section -->
  <BlogLatestPosts
    title="Noutăți"
    linkText="Vezi toate noutățile"
    count={3}
    information="Ultimele noutăți și evenimente de la Asociația Christiana Cluj."
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-[#eaf6ff] dark:bg-transparent"></div>
    </Fragment>
  </BlogLatestPosts>

  <!-- Final CTA -->
  <CallToAction
    actions={[
      {
        variant: 'primary',
        text: 'Donează',
        href: '/sustine-ne',
        icon: 'tabler:heart-filled',
      },
      {
        text: 'Devino voluntar',
        href: '/pagina-voluntarului',
        icon: 'tabler:users',
      },
    ]}
  >
    <Fragment slot="title"> Implică-te! </Fragment>

    <Fragment slot="subtitle">
      Fiecare gest de bunătate contează. Donează, devino voluntar sau ajută-ne să răspândim vestea!
    </Fragment>
  </CallToAction>
</Layout>
